#!/bin/sh

prefix='/usr'
cc='cc'
ar='ar'

while : ; do
  case "$1" in
    "") break;;
    -prefix|--prefix)
        prefix=$2;
        shift
        ;;
    -cc*)
        cc="$2";
        shift
        ;;
    -ar*)
        ar="$2";
        shift
        ;;
    *)
        echo "Unknown option \"$1\"."
        exit 1
        ;;
  esac
  shift
done

cat << EOF > Makefile.config
export CC=$cc
export AR=$ar
export PREFIX=$prefix
EOF
